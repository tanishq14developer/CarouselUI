<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f6ff">
    <RelativeLayout
        android:id="@+id/xphase1"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:background="@drawable/head_rect"
        android:elevation="5dp">
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="35dp"
            android:layout_marginStart="25dp"
            android:src="@drawable/ic_asset_9" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/ic_asset_10" />

        <TextView
            android:id="@+id/octdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_below="@id/arrow"
            android:layout_marginTop="25dp"
            android:text="Oct,2020"
            android:textSize="26dp"
            android:fontFamily="@font/opensans_semibold"
            android:textStyle="bold"
            android:textColor="#091e4a"/>

        <TextView
            android:id="@+id/addtask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search"

            android:singleLine="true"
            android:layout_marginTop="25dp"
            android:gravity="end"
            android:elevation="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:background="@drawable/rectangle_task_shape"
            android:drawableStart="@drawable/ic_add_task"
            android:paddingVertical="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="25dp"
            android:text="Add Task"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/octdate"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginStart="35dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/rectangle_task_shape"
                android:elevation="5dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="Mon"
                    android:paddingBottom="20dp"
                    android:textSize="18sp"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginStart="15dp">
            <TextView
                android:id="@+id/date1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="11"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="Tue"
                android:paddingBottom="20dp"
                android:textSize="18sp"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginStart="10dp">
                <TextView
                    android:id="@+id/date2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/day2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Wed"
                    android:paddingBottom="20dp"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginStart="10dp">
                <TextView
                    android:id="@+id/date3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="13"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/day3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Thurs"
                    android:paddingBottom="20dp"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/xphase1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">

    <TextView
        android:id="@+id/xtask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="Task"
        android:textColor="@color/distalgrey"
        android:textSize="22sp"
        android:fontFamily="@font/opensans_semibold"/>
    <ImageView
        android:id="@+id/horithreedots"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:rotation="90"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_baseline_more_vert_24" />


    <RelativeLayout
        android:id="@+id/xtaskupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/xtask"
        android:background="@drawable/round_rect_shape"
        android:layout_marginTop="20dp"
        android:paddingVertical="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:paddingStart="20dp"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/xcalender"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingVertical="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/round_shape_user"
            android:src="@drawable/ic_calender" />

        <TextView
            android:id="@+id/projectdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:text="UI Development"
            android:textColor="@color/distalgrey"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/opensans_regular"/>
        <TextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:layout_below="@id/projectdata"
            android:text="2 Days ago"
            android:textColor="@color/distalgrey"
            android:textStyle="bold"
            android:fontFamily="@font/opensans_regular"/>

        <ImageView
            android:id="@+id/vertdots"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_more_vert_24" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/xtaskupdate1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/xtaskupdate"
        android:background="@drawable/round_rect_shape"
        android:layout_marginTop="15dp"
        android:paddingVertical="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:paddingStart="20dp"
        android:elevation="5dp">
        <ImageView
            android:id="@+id/vertdots3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_more_vert_24" />



        <ImageView
            android:id="@+id/xcalender1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingVertical="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/round_shape_user"
            android:src="@drawable/ic_calender" />

        <TextView
            android:id="@+id/xprojectdata2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:text="Dashboard Design"
            android:textColor="@color/distalgrey"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/opensans_regular"/>
        <TextView
            android:id="@+id/xdays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:layout_below="@id/xprojectdata2"
            android:text="2 Days age"
            android:textColor="@color/distalgrey"
            android:textStyle="bold"
            android:fontFamily="@font/opensans_regular"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/xtaskupdate2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/xtaskupdate1"
        android:background="@drawable/round_rect_shape"
        android:layout_marginTop="15dp"
        android:paddingVertical="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:paddingStart="20dp"
        android:elevation="5dp">
        <ImageView
            android:id="@+id/vertdots1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_more_vert_24" />



        <ImageView
            android:id="@+id/xcalender2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingVertical="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/round_shape_user"
            android:src="@drawable/ic_calender" />

        <TextView
            android:id="@+id/xprojectdata3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:text="Landing Page"
            android:textColor="@color/distalgrey"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/opensans_regular"/>
        <TextView
            android:id="@+id/xdays2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:layout_below="@id/xprojectdata3"
            android:text="2 Days"
            android:textColor="@color/distalgrey"
            android:textStyle="bold"
            android:fontFamily="@font/opensans_regular"/>
    </RelativeLayout>
    </RelativeLayout>
    </ScrollView>


</RelativeLayout>