<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Screen1"
    android:background="#f2f6ff">

    <RelativeLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/ic_menu" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:paddingVertical="15dp"
        android:background="@drawable/round_shape_user"
        android:layout_marginEnd="25dp"
        android:src="@drawable/ic_user" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/userdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:text="Hello, Daisy!"
            android:textSize="26sp"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_below="@id/name"
            android:text="Have a nice day!"
            android:fontFamily="@font/opensans_semibold"
            android:textSize="16sp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userdetails"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mytask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:background="@drawable/text_shape"
                android:drawableEnd="@drawable/small_circle"
                android:elevation="2dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="15dp"
                android:singleLine="true"
                android:text="My tasks"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/text_shape"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="Project"
                android:textColor="#b4c5ea"
                android:fontFamily="@font/opensans_semibold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:layout_marginBottom="5dp"
                android:singleLine="true"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/text_shape"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="5dp"
                android:paddingLeft="0dp"
                android:paddingVertical="10dp"
                android:textColor="#b4c5ea"
                android:text="Note"
                android:fontFamily="@font/opensans_semibold"
                android:textSize="15sp"/>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/phase1"
        android:layout_below="@id/tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="263dp"
                android:layout_height="289dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_rectangle"
                android:elevation="5dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp">

                <ImageView
                    android:id="@+id/darkuser"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/square_shape"
                    android:paddingVertical="10dp"
                    android:src="@drawable/ic_user" />

                <TextView
                    android:id="@+id/projectname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="center"
                    android:text="Project Z"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/beck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/darkuser"
                    android:layout_marginTop="25dp"
                    android:text="Back End"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/beck"
                    android:layout_marginTop="10dp"
                    android:text="Development"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="50dp"
                    android:text="October 2020"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:layout_below="@id/tasks"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:elevation="5dp"
                android:background="@drawable/shape_rectangle"
                android:paddingLeft="35dp"
                android:paddingRight="35dp">

                <ImageView
                    android:id="@+id/darkuser1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/square_shape"
                    android:paddingVertical="10dp"
                    android:src="@drawable/ic_user" />

                <TextView
                    android:id="@+id/projectname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="center"
                    android:text="Project Z"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/beck1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/darkuser1"
                    android:layout_marginTop="25dp"
                    android:text="Android"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/web1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/beck1"
                    android:layout_marginTop="10dp"
                    android:text="Development"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/dateoct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:layout_alignParentBottom="true"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="October 2020" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:layout_below="@id/tasks"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:elevation="5dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/shape_rectangle"
                android:paddingLeft="35dp"
                android:paddingRight="35dp">

                <ImageView
                    android:id="@+id/darkuser2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/square_shape"
                    android:paddingVertical="10dp"
                    android:src="@drawable/ic_user" />

                <TextView
                    android:id="@+id/projectname2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="center"
                    android:text="Project W"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/beck2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/darkuser2"
                    android:layout_marginTop="25dp"
                    android:text="ios"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/web2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/beck2"
                    android:layout_marginTop="10dp"
                    android:text="Development"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/dateoct1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:layout_alignParentBottom="true"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="October 2020" />

            </RelativeLayout>
        </LinearLayout>

</RelativeLayout>
    <TextView
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progress"
        android:layout_below="@id/phase1"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/opensans_semibold"
        android:textColor="@color/distalgrey"
        android:textSize="22sp"
        android:layout_marginStart="30dp"/>
    <RelativeLayout
        android:id="@+id/taskupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress"
        android:background="@drawable/round_rect_shape"
        android:layout_marginTop="15dp"
        android:paddingVertical="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:paddingStart="20dp"
        android:elevation="5dp">



        <ImageView
            android:id="@+id/calender"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingVertical="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/round_shape_user"
            android:src="@drawable/ic_calender" />

        <TextView
            android:id="@+id/projectdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:text="Project Name Here"
            android:textColor="@color/distalgrey"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/opensans_regular"/>
        <TextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:layout_below="@id/projectdata"
            android:text="2 Days"
            android:textColor="@color/distalgrey"
            android:textStyle="bold"
            android:fontFamily="@font/opensans_regular"/>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f2f6ff"
        app:itemIconTint="@drawable/bottom_nav_color"
        app:menu="@menu/bottom_navigation"/>



</RelativeLayout>